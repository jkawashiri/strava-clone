<%- include('../partials/header') %>

<h2>Add a Workout</h2>

<form action="/workouts" method="POST">
    <label>Activity:
        <select name="activity">
            <option value="Run" selected>Run</option>
            <option value="Swim">Swim</option>
            <option value="Bike">Bike</option>
        </select>
    </label><br>
    <br><label>Date & Time:
        <input type="datetime-local" name="date">
    </label><br>
    <br><label>Title:
        <input type="text" name="title" required="true">
    </label><br>
    <br><label>Time:
        <input type="number" name="hours" class="time"> (hours)
        <input type="number" name="minutes" class="time"> (minutes)
        <input type="number" name="seconds" class="time"> (seconds)
    </label><br>
    <br><label>Distance:
        <input type="number" name="distance" step="0.01">
        <select name="metric">
            <option value ="mi" selected>mi</option>
            <option value="yd">yd</option>
            <option value="km">km</option>
            <option value="m">m</option>
        </select>
    </label><br>
    <br><div>
        <button>Add Workout</button>
    </div>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>